<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/ripple_color"> <!-- Create this color in colors.xml -->

    <item>
        <shape android:shape="rectangle">
            <!-- Solid background color -->
            <solid android:color="@color/colorPrimary" /> <!-- Replace with your color -->

            <!-- Rounded corners -->
            <corners android:radius="20dp" /> <!-- Adjust radius as needed -->

            <!-- Optional: Add stroke/border -->
            <stroke
                android:width="1dp"
                android:color="#FFFFFF" />
        </shape>
    </item>
</ripple>