<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.projectpa.ui.home.HomeFragment"
        android:label="Beranda"
        tools:layout="@layout/fragment_home" >
    <!-- Possible actions from home to result -->
    <action
        android:id="@+id/action_home_to_result"
        app:destination="@id/navigation_result" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.projectpa.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.projectpa.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_help"
        android:name="com.example.projectpa.ui.help.HelpFragment"
        android:label="Bantuan"
        tools:layout="@layout/fragment_help" />
    <fragment
        android:id="@+id/navigation_result"
        android:name="com.example.projectpa.ui.result.ResultFragment"
        android:label="Hasil Klasifikasi"
        tools:layout="@layout/fragment_result" />
</navigation>